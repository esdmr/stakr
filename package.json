{
  "private": true,
  "type": "module",
  "scripts": {
    "tspm": "node add-paths.js",
    "clean": "rimraf build .nyc_output coverage && npm run tspm",
    "build": "npm run tspm && tsc -b",
    "watch": "npm run tspm && tsc -b -w",
    "prepare": "npm run clean && npm run build",
    "lint": "xo src/**/*.ts test/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "tap": "tap --no-coverage",
    "tap:coverage": "NODE_OPTIONS=\"--no-warnings --experimental-loader @istanbuljs/esm-loader-hook\" tap",
    "tap:coverage-report": "npm run tap:coverage -- --no-check-coverage --reporter silent && npm run tap:coverage -- --coverage-report=html",
    "test": "npm run lint && npm run tap:coverage"
  },
  "author": "Saeed M Rad",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "0.1.2",
    "@types/node": "15.12.2",
    "@types/tap": "15.0.3",
    "rimraf": "3.0.2",
    "tap": "15.0.9",
    "typescript": "4.3.3",
    "xo": "0.39.1"
  },
  "dependencies": {
    "dependency-graph": "0.11.0"
  }
}
